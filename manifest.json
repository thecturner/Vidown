{
  "name": "Vidown - Video Downloader",
  "description": "Detect and download videos from web pages with smart format detection.",
  "version": "2.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "downloads",
    "webRequest",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vidown - Download Videos"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
